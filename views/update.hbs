<section class="update">
    <div class="px-3 py-3 bg-dark text-white">
        <h1>Update Blog</h1>
    </div>
    <div class="form-container">
        <form method="POST" action="/blog/update">
            {{#if err}}
            <div class="alert alert-danger" role="alert">
                {{{err}}}
            </div>
            {{/if}}
            <input type="hidden" class="form-control" id="blogid" name="blogid" value="{{{blogid}}}"
                aria-describedby="Enter Blog ID" placeholder="Enter Blog ID">
            <div class="form-group mb-3">
                <label for="title" class="mb-2">Title</label>
                <input type="text" class="form-control" id="title" name="title" value="{{{title}}}"
                    aria-describedby="Enter title" placeholder="Enter title">
            </div>
            <div class="form-group mb-3">
                <label for="content" class="mb-2">Content</label>
                <textarea class="form-control" id="content" name="content" rows="15">{{{content}}}</textarea>
            </div>
            <div class="d-grid">
                <button type="submit" class="btn btn-secondary">Submit</button>
            </div>
        </form>
    </div>
</section>