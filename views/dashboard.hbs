<section class="dashboard">
    <div class="text-center my-5">
        <h1>Dashboard</h1>
    </div>
    <div class="blogContainer">
        {{#if err}}
        <div class="alert alert-danger" role="alert">
            {{{err}}}
        </div>
        {{/if}}
        {{#if blogs}}
        {{#each blogs}}
        <div class="blog shadow-sm mb-3">
            <div class="blogTitle">
                <h3 class="px-3 py-3 bg-dark text-white">{{title}}</h3>
            </div>
            <div class="blogContent p-3">
                <p>{{content}}</p>
                <div class="postedBy">
                    <p>-- {{createdAt}}</p>
                </div>
            </div>
            <div class="blogButtons p-3">
                <a href="/blog/update/{{id}}" class="btn btn-secondary">Edit</a>
                <a href="/blog/delete/{{id}}" class="btn btn-danger">Delete</a>
            </div>
        </div>
        {{/each}}
        {{else}}
        <h2 class="notify text-center p-5 display-6">
            There are no blogs!
        </h2>
        {{/if}}

        <div class="createNew text-center">
            <a href="/blog/create" class="btn btn-dark">+ New Post</a>
        </div>
    </div>
</section>